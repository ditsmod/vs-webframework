    "get-body": "^1.0.3",
    "nodemon": "^2.0.20",
    "pm2": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
