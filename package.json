    "@nestjs/common": "^9.1.4",
    "@nestjs/core": "^9.1.4",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/platform-fastify": "^9.1.4",
    "@ts-stack/chain-error": "^1.2.0",
    "@ts-stack/di": "^1.2.0",
    "express": "^4.17.2",
    "fastify": "^4.7.0",
    "koa": "^2.13.4",
    "restify": "^8.6.0",
    "rxjs": "^7.5.7"
  },
